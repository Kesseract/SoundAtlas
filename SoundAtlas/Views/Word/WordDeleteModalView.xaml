<Window x:Class="SoundAtlas.Views.WordDeleteModalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Deletion" Height="300" Width="400">
    <StackPanel>
        <TextBlock Text="Are you sure you want to delete the following words?" FontWeight="Bold" Padding="5"/>
        <ListBox ItemsSource="{Binding SelectedItems}" DisplayMemberPath="Name"/>
        <Button Content="Delete" HorizontalAlignment="Center" Margin="10" Click="Delete_Click"/>
    </StackPanel>
</Window>