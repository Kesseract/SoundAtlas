<Window x:Class="SoundAtlas.Views.Theory.TheoryCreateModalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Theory" Height="550" Width="400">

    <StackPanel Grid.Row="0" Margin="10">
        <TextBlock Text="Theory:" Margin="5"/>
        <TextBox x:Name="txtTheory" Margin="5"/>

        <TextBlock Text="Melody Flag:" Margin="5"/>
        <CheckBox x:Name="checkBoxMelodyFlg" Margin="5"/>

        <TextBlock Text="Chord Flag:" Margin="5"/>
        <CheckBox x:Name="checkBoxChordFlg" Margin="5"/>

        <TextBlock Text="Rhythm Flag:" Margin="5"/>
        <CheckBox x:Name="checkBoxRhythmFlg" Margin="5"/>

        <TextBlock Text="Abstract:" Margin="5"/>
        <TextBox x:Name="txtAbstract" Margin="5" Height="40"/>

        <TextBlock Text="Detail:" Margin="5"/>
        <TextBox x:Name="txtDetail" Margin="5" Height="80"/>

        <Button Content="Add" Margin="10" Width="100" HorizontalAlignment="Center" Click="Add_Click"/>
    </StackPanel>
</Window>
