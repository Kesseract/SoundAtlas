<Window x:Class="SoundAtlas.Views.VirtualInstrument.Instrument.Instruments.InstrumentUpdateModalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instrument Details" Height="350" Width="400" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.RowSpan="2">
            <Label Content="Name:"/>
            <TextBox Text="{Binding InstrumentUpdate.Name}" Padding="5"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="Save"  Margin="5,0" Padding="10,5" Click="SaveButton_Click"/>
                <Button Content="Close" Margin="5,0" Padding="10,5" Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>