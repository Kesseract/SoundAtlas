<Window x:Class="SoundAtlas.Views.VirtualInstrument.Instrument.Categories.CategoryCreateModalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Category" Height="350" Width="400"
        ResizeMode="NoResize">
    <StackPanel Margin="10">
        <Label Content="Classification1:"/>
        <TextBox x:Name="classification1" Margin="0,5"/>
        <Label Content="Classification2:"/>
        <TextBox x:Name="classification2" Margin="0,5"/>
        <Label Content="Classification3:"/>
        <TextBox x:Name="classification3" Margin="0,5"/>
        <Label Content="Classification4:"/>
        <TextBox x:Name="classification4" Margin="0,5"/>
        <Button Content="Add" Margin="10" Width="100" HorizontalAlignment="Center" Click="Add_Click"/>
    </StackPanel>
</Window>